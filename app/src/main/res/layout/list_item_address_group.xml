<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_item_address_group_background_selector"
    android:focusable="false"
    android:orientation="horizontal"
    android:paddingLeft="5dp" >

    <ImageView
        android:id="@+id/iv_indicator"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/list_item_address_group_indicator_expanded"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:gravity="left|center_vertical"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="#ff0099cc"
        android:textSize="18dp" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_hdm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/fl_hdm_seed"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ui_touchable_bg"
                android:layout_marginLeft="2dp"
                android:focusable="false">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:focusable="false"
                    android:duplicateParentState="true"
                    android:src="@drawable/hdm_button_seed_selector"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_hdm_add"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ui_touchable_bg"
                android:focusable="false">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:focusable="false"
                    android:duplicateParentState="true"
                    android:src="@drawable/hdm_button_add_address_selector"/>

            </FrameLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_type"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/address_type_private"/>
    </FrameLayout>
</LinearLayout>