<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_arrow_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dialog_arrow_top" />

    <FrameLayout
        android:id="@+id/fl_center_dialog_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/center_dialog_background" />

    <ImageView
        android:id="@+id/iv_arrow_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dialog_arrow_bottom" />
</LinearLayout>