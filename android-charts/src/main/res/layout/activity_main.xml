<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/macandlestickchart" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <net.bither.charts.view.MACandleStickChart
                android:id="@+id/macandlestickchart"
                android:layout_width="fill_parent"
                android:layout_height="240dip" />

            <LinearLayout
                android:id="@+id/ll_display_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:background="@android:color/background_dark"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/tv_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />
            </LinearLayout>
        </FrameLayout>

        <net.bither.charts.view.MarketDepthChart
            android:id="@+id/marketdepthchart"
            android:layout_width="fill_parent"
            android:layout_height="240dip" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/gridchart" />

        <net.bither.charts.view.GridChart
            android:id="@+id/gridchart"
            android:layout_width="fill_parent"
            android:layout_height="240dip" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/linechart" />

        <net.bither.charts.view.LineChart
            android:id="@+id/linechart"
            android:layout_width="fill_parent"
            android:layout_height="240dip" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/sliplinechart" />

        <net.bither.charts.view.SlipLineChart
            android:id="@+id/sliplinechart"
            android:layout_width="fill_parent"
            android:layout_height="240dip" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/slipareachart" />

        <net.bither.charts.view.SlipAreaChart
            android:id="@+id/slipareachart"
            android:layout_width="fill_parent"
            android:layout_height="240dip" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/slipbandchart" />

        <net.bither.charts.view.SlipBandAreaChart
            android:id="@+id/slipbandchart"
            android:layout_width="fill_parent"
            android:layout_height="240dip" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/stickchart" />

        <net.bither.charts.view.StickChart
            android:id="@+id/stickchart"
            android:layout_width="fill_parent"
            android:layout_height="240dip" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/slipstickchart" />

        <net.bither.charts.view.SlipStickChart
            android:id="@+id/slipstickchart"
            android:layout_width="fill_parent"
            android:layout_height="240dip" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/coloredslipstickchart" />

        <net.bither.charts.view.ColoredSlipStickChart
            android:id="@+id/coloredslipstickchart"
            android:layout_width="fill_parent"
            android:layout_height="240dip" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/mastickchart" />

        <net.bither.charts.view.MAStickChart
            android:id="@+id/mastickchart"
            android:layout_width="fill_parent"
            android:layout_height="240dip" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/maslipstickchart" />

        <net.bither.charts.view.MASlipStickChart
            android:id="@+id/maslipstickchart"
            android:layout_width="fill_parent"
            android:layout_height="240dip" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/minusstickchart" />

        <net.bither.charts.view.MinusStickChart
            android:id="@+id/minusstickchart"
            android:layout_width="fill_parent"
            android:layout_height="240dip" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/slipminusstickchart" />

        <net.bither.charts.view.SlipMinusStickChart
            android:id="@+id/slipminusstickchart"
            android:layout_width="fill_parent"
            android:layout_height="240dip" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/candlestickchart" />

        <net.bither.charts.view.CandleStickChart
            android:id="@+id/candlestickchart"
            android:layout_width="fill_parent"
            android:layout_height="240dip" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/slipcandlestickchart" />

        <net.bither.charts.view.SlipCandleStickChart
            android:id="@+id/slipcandlestickchart"
            android:layout_width="fill_parent"
            android:layout_height="240dip" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/maslipcandlestickchart" />

        <net.bither.charts.view.MASlipCandleStickChart
            android:id="@+id/maslipcandlestickchart"
            android:layout_width="fill_parent"
            android:layout_height="240dip" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/bollmaslipcandlestickchart" />

        <net.bither.charts.view.BOLLMASlipCandleStickChart
            android:id="@+id/bollmaslipcandlestickchart"
            android:layout_width="fill_parent"
            android:layout_height="240dip" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/macdchart" />

        <net.bither.charts.view.MACDChart
            android:id="@+id/macdchart"
            android:layout_width="fill_parent"
            android:layout_height="240dip" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/piechart" />

        <net.bither.charts.view.PieChart
            android:id="@+id/piechart"
            android:layout_width="fill_parent"
            android:layout_height="240dip" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/spiderwebchart" />

        <net.bither.charts.view.SpiderWebChart
            android:id="@+id/spiderwebchart"
            android:layout_width="fill_parent"
            android:layout_height="240dip" />
    </LinearLayout>

</ScrollView>